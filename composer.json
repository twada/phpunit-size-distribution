{
    "name": "twada/phpunit-size-distribution",
    "description": "A PHPUnit extension that measures and reports test size distribution (Small/Medium/Large)",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Twada\\PhpunitSizeDistribution\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Twada\\PhpunitSizeDistribution\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Takuto WADA",
            "email": "takuto.wada@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "phpunit/phpunit": "^10.5 || ^11.0 || ^12.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpcov": "^11.0"
    },
    "scripts": {
        "test": "phpunit",
        "coverage": [
            "@php -r \"@mkdir('build/coverage', 0777, true);\"",
            "phpunit --coverage-php build/coverage/unit.cov",
            "phpunit -c tests/Fixtures/phpunit.xml --coverage-php build/coverage/fixtures.cov || true",
            "phpcov merge build/coverage --clover build/coverage/clover.xml --text php://stdout"
        ],
        "analyse": "phpstan analyse"
    }
}
